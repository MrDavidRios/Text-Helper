{
	"name": "Text Helper",
	"description": "Helps make your text-editing workflow more seamless. Currently only developed for Google Docs.",
	"version": "1.0.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["storage", "tabs", "scripting"],
	"action": {
		"default_popup": "popup.html"
	},
	"host_permissions": ["http://*/", "https://*/"],
	"icons": {
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
